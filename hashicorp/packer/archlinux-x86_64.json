{
    "variables": {
        "iso_url": "archlinux-2017.02.01-dual.iso",
        "iso_sum": "982a84f19fad1208745783426f728665",
        "iso_sum_type": "md5"
    },
    "builders":[
        {
            "type": "virtualbox-iso",
            "guest_os_type": "ArchLinux_64",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_sum`}}",
            "iso_checksum_type": "{{user `iso_sum_type`}}",
            "guest_additions_mode" : "disable",
            "disk_size": 10240,
            "boot_wait": "10s",
            "boot_command": "<enter><wait10><wait10><wait5>systemctl start sshd<enter><wait5>passwd<enter>root<enter>root<enter>",
            "ssh_username": "root",
            "ssh_password": "root",
            "ssh_wait_timeout": "120s",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "1500"]
            ],
            "shutdown_command": "systemctl poweroff"
        }],
        "provisioners": [{
            "type": "shell",
            "scripts": [
                "userdata"
            ]
        }],
        "post-processors":[
            {
                "type": "vagrant",
                "output": "archlinux-x86_64.box"

            }
        ]
}
